#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Show all events from today, followed by the total duration.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[KHAL-LIST-ARGS ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

khal-wrapper list "$@" --day-format '' --format '{start-date-long} {start-time} {end-date-long} {end-time} {title}' today eod \
    | reldate --relative-to-first --difference \
    | tee >(sumField 3 | secondsToDuration | outputAndPrintf -- '--\n') \
    | fieldMap 3 '|secondsToDuration --unbuffered --width 6'
