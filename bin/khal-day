#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Show all events from DAY, followed by the total duration.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[KHAL-LIST-ARGS ...] DAY [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    echo 'ERROR: No DAY passed.'
    echo
    printUsage "$0"
    exit 2
fi >&2
day="${!#}"
[ $# -eq 0 ] && set -- || set -- "${@:1:$(($#-1))}"

khal-wrapper list "$@" --day-format '' --format '{start-date-long} {start-time} {end-date-long} {end-time} {title}' "$day" eod \
    | reldate --relative-to-first --difference \
    | tee >(sumField 3 | secondsToDuration | outputAndPrintf -- '--\n') \
    | fieldMap 3 '|secondsToDuration --unbuffered --width 6'
