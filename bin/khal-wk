#!/bin/bash
set -o pipefail

printUsage()
{
    cat <<HELPTEXT
Show all events from this week, followed by the total duration.
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" '[KHAL-LIST-ARGS ...] [-?|-h|--help]'
}
case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

exec khal-timespan "$@" today week
